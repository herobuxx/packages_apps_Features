<PreferenceScreen
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:title=" "
    xmlns:settings="http://schemas.android.com/apk/res/com.android.settings">

    <!-- Title Header -->
    <Preference
        android:layout="@layout/customizer_title_header"
        android:selectable="false"/>

    <Preference
        android:layout="@layout/themer_preview"
        android:selectable="false" />

    <ListPreference
        android:key="android.theme.customization.accent_color"
        android:title="@string/theme_accent_color_title"/>
		
    <ListPreference
        android:key="android.theme.customization.font"
        android:title="@string/theme_font_title"/>
		
    <ListPreference
        android:key="android.theme.customization.adaptive_icon_shape"
        android:title="@string/theme_icon_shape_title"/>

    <ListPreference
        android:key="android.theme.customization.icon_pack"
        android:title="@string/theme_icon_pack_title"/>
			
    <ListPreference
        android:key="lock_screen_custom_clock_face"
        android:summary="%s"
        android:title="@string/theme_clock_face_title"
        android:entries="@array/theme_clock_face_entries"
        android:entryValues="@array/theme_clock_face_values" />
		
</PreferenceScreen>
